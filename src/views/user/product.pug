extends layout_user.pug
block content 
    product-container.bg-white.rounded-lg.shadow-lg.max-w-lg.p-6.text-center
      .product-image
        img(src=`/image/${product.img_id}` alt="Product Image" class="w-full rounded-lg")

      .product-details.mt-6
        p.product-name.text-2xl.font-bold.text-gray-800 #{product.name}

        p.text-sm.text-gray-600.mb-2 Category:&#x20;
            span.text-blue-600.font-semibold #{product.category}

        .product-tags.mt-4.flex.flex-wrap.justify-center
            each tag in product.tags
                span.bg-gray-200.text-sm.text-gray-800.rounded-full.px-4.py-2.m-2 #{tag}

        .product-price.mt-6.text-2xl.font-bold.text-green-500 $#{product.price}
        .text-blue-500.text-sm sales: #{product.timesPurchased}
        button(type="button" onclick=`('${product._id}')` class="bg-blue-600  xl:w-full md:w-full sm:w-full text-white px-3 py-2 2xl:w-auto rounded hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2 flex justify-center items-center content-center gap-2 h-min mt-2") Add cart
        button(type="button" onclick=`('${product._id}')` class="bg-red-800  xl:w-full md:w-full sm:w-full text-white px-3 py-2 2xl:w-auto rounded hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 flex justify-center items-center content-center gap-2 h-min mt-2") Return