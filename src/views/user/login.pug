doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="/styles.css" rel="stylesheet")
    title #{title}
  body(class="bg-gray-100 flex items-center justify-center min-h-screen")
    .bg-white.p-6.rounded-lg.shadow-lg.w-96
      h2.text-2xl.font-bold.mb-6.text-center Login
      form(action="/login" method="post" class="")
        // Username field
        div
          label(for="username" class="block text-sm font-medium text-gray-700") Username
          input#username(type="text" name="username" required class="w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 mb-4")

        // Password field
        div
          label(for="password" class="block text-sm font-medium text-gray-700") Password
          input#password(type="password" name="password" required class="w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 mb-4")

        // Submit button
        button(type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50 mb-4") Login
        a(href="/register")
          button(type="button" class="w-full bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600 focus:ring-2 focus:ring-gray-400 focus:ring-opacity-50") Resgister
      // Error message
      if error
        .mt-4
          p.text-red-500.text-sm.text-center Incorrect username or password.
