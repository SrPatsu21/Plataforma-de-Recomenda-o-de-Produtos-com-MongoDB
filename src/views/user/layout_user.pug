doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="/styles.css" rel="stylesheet")
        block nestHead
        title #{title}
    body()
        nav.bg-gray-200.absolute.top-0.left-0.w-full
            div(class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8")
                .flex.h-16.items-center.justify-between
                    .flex.items-center
                        a(href="/" class="text-black text-xl font-bold") Home
                    div(class="hidden md:flex space-x-4")
                        a(href="/" class="text-gray-800 hover:text-black px-3 py-2 rounded-md text-sm font-medium") Products
                        a(href="#" class="text-gray-800 hover:text-black px-3 py-2 rounded-md text-sm font-medium") Buy history
                        a(href="/profile" class="text-gray-800 hover:text-black px-3 py-2 rounded-md text-sm font-medium") Profile
                    .flex.items-center.space-x-4
                        .relative
                        if login
                            a(href="/logout")
                                button(id="dropdown-btn" class="flex items-center text-sm bg-gray-500 text-white px-4 py-2 rounded-md focus:outline-none") Logout
                        else
                            a(href="/login")
                                button(id="dropdown-btn" class="flex items-center text-sm bg-gray-500 text-white px-4 py-2 rounded-md focus:outline-none") Login
                    div(class="md:hidden flex items-center")
                        button(id="mobile-menu-btn" class="text-gray-800 hover:text-white focus:outline-none focus:ring-2 focus:ring-gray-500")
                            svg.h-6.w-6(xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24", stroke="currentColor")
                                path(stroke-linecap="round", stro ke-linejoin="round", stroke-width="2", d="M4 6h16M4 12h16M4 18h16")
                div(id="mobile-menu" class="md:hidden" style="display: none;")
                    .space-y-1.px-2.pt-2.pb-3
                        a(href="/", class="text-gray-800 hover:text-black block px-3 py-2 rounded-md text-base font-medium") Products
                        a(href="#", class="text-gray-800 hover:text-black block px-3 py-2 rounded-md text-base font-medium") Buy history
                        a(href="/profile", class="text-gray-800 hover:text-black block px-3 py-2 rounded-md text-base font-medium") Profile
        main(class="bg-slate-300 flex items-center justify-center min-h-screen mt-4")
            block content
        footer

        script.
            document.getElementById('mobile-menu-btn').addEventListener('click', () => {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.style.display = mobileMenu.style.display === 'none' ? 'block' : 'none';
            });
        block nestedJS