extends layout_adm.pug
block content
    .w-full.max-w-md.bg-white.shadow-md.rounded-lg.p-6
        h1.text-2xl.font-bold.text-gray-800.mb-4.text-center Register
        form(action="/register" method="POST")
            .mb-4
            label.block.text-sm.font-medium.text-gray-700(for="username") Username
            input#username(name="username" type="text" required placeholder="Enter your username" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")
            .mb-4
            label.block.text-sm.font-medium.text-gray-700(for="email") Email
            input#email(name="email" type="email" required placeholder="Enter your email" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")
            .mb-4
            label.block.text-sm.font-medium.text-gray-700(for="password") Password
            input#password(name="pass" type="password" required minlength="8" placeholder="Enter your password" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")
            .mb-4
            label.block.text-sm.font-medium.text-gray-700(for="lastWords") Last Searched Words
            input#lastWords(name="lastWords" type="text" placeholder="Comma-separated \",\" (max 10)" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")
            p.text-xs.text-gray-500.mt-1 Enter up to 10 comma-separated words.
            .mb-4
            label.block.text-sm.font-medium.text-gray-700(for="lastCategories") Last Searched Categories
            input#lastCategories(name="lastCategories" type="text" placeholder="Comma-separated \",\" (max 10)" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")
            p.text-xs.text-gray-500.mt-1 Enter up to 10 comma-separated categories.
            .mb-4
            label.block.text-sm.font-medium.text-gray-700(for="lastTags") Last Searched Tags
            input#lastTags(name="lastTags" type="text" placeholder="Comma-separated \",\" (max 10)" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")
            p.text-xs.text-gray-500.mt-1 Enter up to 10 comma-separated tags.
            .mt-6
            button(type="submit" class="w-full.bg-blue-500.text-white.font-medium.py-2.px-4.rounded-md.shadow-md.hover:bg-blue-600") Register